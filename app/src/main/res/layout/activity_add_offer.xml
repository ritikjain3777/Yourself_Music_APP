<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3EEEC"
    android:orientation="vertical"
    tools:context=".AddOffer">
    <include
        layout="@layout/header"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD OFFER"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#020202"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/selectImage"
        android:src="@drawable/ic_library_music_black_24dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Click On Image to Choose Thumbnail"
        android:textStyle="bold"
        />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Offer Name"
        android:padding="20dp"
        android:textColor="#020202"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextstyle"
        android:inputType="text"
        android:id="@+id/oName"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Offer Price"
        android:textColor="#020202"
        android:padding="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/oPrice"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextstyle"
        android:inputType="phone"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Offer Link"
        android:padding="20dp"
        android:textColor="#020202"
        android:id="@+id/oLink"
        android:inputType="text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittextstyle"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textColor="#020202"
        android:id="@+id/submit"
        android:text="Add New Offer"
        android:background="@drawable/buttonstyle"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical">
        <include
            layout="@layout/bottom"/>

    </LinearLayout>

</LinearLayout>